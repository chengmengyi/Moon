<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/set"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_server_list"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_set"
        android:background="@drawable/bg_293c42_26dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/fast"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Smart Location"
            android:layout_marginLeft="12dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/right1"
            android:layout_marginLeft="16dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#99FFFFFF"
        android:layout_marginTop="30dp"
        android:text="Connection time:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="00:00:00"
        android:textStyle="bold"
        android:textColor="#FFF997"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_center"
        android:layout_width="246dp"
        android:layout_height="228dp"
        android:src="@drawable/center_connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"/>
    <View
        android:id="@+id/view_connect"
        android:layout_width="172dp"
        android:layout_height="66dp"
        android:layout_marginTop="209dp"
        android:background="@drawable/bg_373f40_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_connect"
        android:layout_width="172dp"
        android:layout_height="66dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/view_connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_connect_btn"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right2"
            android:layout_marginLeft="12dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#FFE284"
            android:layout_marginLeft="10dp" />
        <View
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_fff8bb_1dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_connected"
        android:layout_width="172dp"
        android:layout_height="66dp"
        android:paddingLeft="8dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/view_connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_8dd75e_1dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#9EDD76"
            android:layout_marginLeft="10dp" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/left"
            android:layout_marginLeft="12dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_connected_btn"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connecting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:src="@drawable/icon_connecting_btn"
        app:layout_constraintTop_toTopOf="@id/view_connect"
        app:layout_constraintLeft_toLeftOf="@id/view_connect"
        app:layout_constraintBottom_toBottomOf="@id/view_connect"
        />
    <View
        android:id="@+id/guide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/guide_lottie_view"
        android:layout_width="260dp"
        android:layout_height="137dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="connect.zip"
        android:layout_marginTop="203dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"
        />
</androidx.constraintlayout.widget.ConstraintLayout>